<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Nt.Utils.Resources.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Config.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="NtText" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="NtTextTitle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>