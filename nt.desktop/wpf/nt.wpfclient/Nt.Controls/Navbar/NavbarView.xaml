<UserControl x:Class="Nt.Controls.Navbar.NavbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nt.Controls.Navbar"
             xmlns:localize="clr-namespace:Nt.Utils.Resources.Properties;assembly=Nt.Utils.Resources" xmlns:helpercontrols="clr-namespace:Nt.Controls.HelperControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:NavbarViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="gainsboro">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{x:Static localize:Resources.LL_Common_AppTitle}" Padding="5,0,0,0"
               VerticalAlignment="Center"  FontSize="16" FontWeight="Bold" Foreground="Black"/>
        <helpercontrols:Avataar Padding="0,0,5,0" HorizontalAlignment="Right"
                                ImagePosition="Right" UserName="{Binding UserName}"
                                Grid.Column="1" />
    </Grid>
</UserControl>
