{
  "Routes": [
      

    // Register User
    {
      "DownstreamPathTemplate": "/api/Users/Register",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 8301
        }
      ],
      "UpstreamPathTemplate": "/api/user/createuser",
      "UpstreamHttpMethod": [ "Post" ],
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 10000,
        "TimeoutValue": 3000
      }
    },

    // Authenticate
    {
      "DownstreamPathTemplate": "/api/authenticate/Validate",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 8100
        }

      ],
      "UpstreamPathTemplate": "/api/user/validateuser",
      "UpstreamHttpMethod": [ "Post" ],
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 1000,
        "TimeoutValue": 10000
      }

    },

    // Change Password
    {
      "DownstreamPathTemplate": "/Users/ChangePassword",
      "DownstreamSchema": "https",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7236"
        }
      ],
      "UpstreamPathTemplate": "/user/changepassword",
      "UpstreamHttpMethod": [ "POST" ],
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 10000,
        "TimeoutValue": 3000
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationKey",
        "AllowedScopes": []
      }
    },

    // for gateway swagger integration

    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 8100
        }

      ],
      "UpstreamPathTemplate": "/authenticate",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "authentication",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 1000,
        "TimeoutValue": 10000
      }
    },

    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 8100
        }

      ],
      "UpstreamPathTemplate": "/user",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "user",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 1000,
        "TimeoutValue": 10000
      }
    }
  ],

  "SwaggerEndPoints": [
    {
      "Key": "authentication",
      "Config": [
        {
          "Name": "Authentication API",
          "Version": "v1",
          "Url": "http://host.docker.internal:8100/swagger/v1/swagger.json"
        }
      ]
    },

    {
      "Key": "user",
      "Config": [
        {
          "Name": "User API",
          "Version": "v1",
          "Url": "http://host.docker.internal:8301/swagger/v1/swagger.json"
        }
      ]
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8001"
    //"BaseUrl": "http://localhost:5017"
  }
}
