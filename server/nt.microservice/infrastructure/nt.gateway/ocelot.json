/*
   AuthService : Port 8002
   UserService : Port 8003
*/

{
  "Routes": [

    {
      "DownstreamPathTemplate": "/api/User/demomethod",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "GET",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          //"Host": "localhost",
          "Port": "8002"
        }
      ],
      "UpstreamPathTemplate": "/demo/auth",
      "UpstreamHttpMethod": [ "GET" ],
      "SwaggerKey": "authentication",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 10000,
        "TimeoutValue": 3000

      }
    },
    {
      "DownstreamPathTemplate": "/api/Users/Register",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 8301
        }
      ],
      "UpstreamPathTemplate": "/user/createuser",
      "UpstreamHttpMethod": [ "Post" ],
      "SwaggerKey": "authentication",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 10000,
        "TimeoutValue": 3000
      }
    },
    {
      "DownstreamPathTemplate": "/api/authenticate/Validate",
      "DownstreamSchema": "http",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8100
        }

      ],
      "UpstreamPathTemplate": "/user/authenticate",
      "UpstreamHttpMethod": [ "GET" ],
      "SwaggerKey": "authentication",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 1000,
        "TimeoutValue": 10000
      }

    },
    {
      "DownstreamPathTemplate": "/Users/ChangePassword",
      "DownstreamSchema": "https",
      "DownstreamHttpMethod": "POST",
      "RouteIsCaseSensitive": false,
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7236"
        }
      ],
      "UpstreamPathTemplate": "/user/changepassword",
      "UpstreamHttpMethod": [ "POST" ],
      "SwaggerKey": "authentication",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2,
        "DurationOfBreak": 10000,
        "TimeoutValue": 3000
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationKey",
        "AllowedScopes": []
      }
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "authentication",
      "TransformByOcelotConfig": false,
      "Config": [
        {
          "Name": "Authentication API",
          "Version": "v1",
          //"Url": "http://localhost:8100/swagger/v0.9/swagger.json"
          "Url": "http://localhost:8100/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8001"
    //"BaseUrl": "http://localhost:5017"
  }
}
